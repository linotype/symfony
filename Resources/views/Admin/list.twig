{% extends "@Linotype/admin.twig" %}

{% block header %}
    <h1 class="mb-0 mt-2">{{title}} list</h1>
{% endblock %}

{% block content %}
    
    <div class="card-list">
        
        {% for item in items %}
        
            <div class="panel-block">
                <div class="dropdown float-right">
                    <div class="btn-group"><a href="{{item.link.edit}}" class="btn btn-primary">Edit</a><a class="btn btn-primary dropdown-toggle" tabindex="0"><i class="icon icon-caret"></i></a>
                        <ul class="menu">
                            <li class="menu-item"><a href="{{item.link.view}}">View</a></li>
                            
                            <li class="menu-item"><a href="{{item.link.delete}}">Delete</a></li>
                        </ul>
                    </div>
                </div>
                <h4 class="text-primary mb-0 mt-2">{{item.title}}</h4>
                <p class="text-secondary mb-1">{{item.info}}</p>
                <div class="desc">
                {{item.desc}}
                </div>
            </div>
            
        
        {% endfor %}
    
    </div>

{% endblock %}

{% block footer %}
    
{% endblock %}
