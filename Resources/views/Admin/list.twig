{% extends "@Linotype/admin.twig" %}

{% block header %}
    <div class="panel-block">
        <h2 class="m-0 text-primary d-inline">{{title}} list</h2> 
    </div>
{% endblock %}

{% block content %}
    
    <div class="card-list">
        
        {% for item in items %}
        
            <div class="panel-block">
                <div class="dropdown float-right mt-1">
                    <div class="btn-group"><a href="{{item.link.edit}}" class="btn">Edit</a><a class="btn dropdown-toggle" tabindex="0"><i class="icon icon-caret"></i></a>
                        <ul class="menu">
                            <li class="menu-item"><a href="{{item.link.view}}">View</a></li>
                            
                            <li class="menu-item"><a href="{{item.link.delete}}">Delete</a></li>
                        </ul>
                    </div>
                </div>
                <h4 class="text-dark mb-0 mt-2">{{item.title|raw}}</h4>
                <p class="text-secondary mb-1">{{item.info|raw}}</p>
                <div class="desc">
                {{item.desc|raw}}
                {# {{linotype_render('block', item.block, )}} #}
                </div>
            </div>
            
        
        {% endfor %}
    
    </div>

{% endblock %}

{% block footer %}
    <a href="{{link_new}}" class="btn btn-primary float-right">Add new</a>
{% endblock %}
