{% extends "@Linotype/admin.twig" %}

{% block content %}

    <form action="{{form_action}}" enctype="multipart/form-data" method="POST">

        <h1 class="text-dark">Edit {{title}} Page</h1> 
        
        {{ linotype_admin( 'template', template_id ) }}

        <input class="btn btn-primary" type="submit" value="Save">

    </form> 

{% endblock %}

{% block notif %}

    {% if success == 'true' %}
        <div class="toast toast-success">
            <button class="btn btn-clear float-right"></button>
            Success
        </div>
    {% elseif success == 'false' %}
        <div class="toast toast-error">
            <button class="btn btn-clear float-right"></button>
            Error
        </div>
    {% endif %}

{% endblock %}

{% block viewer %}

<div class="viewer">
    <div class="viewer-content">
        <div class="viewer-content-top-left"></div>
        <div class="viewer-content-top-right"></div>
        <div class="viewer-content-bottom-left"></div>
        <div class="viewer-content-bottom-right"></div>
        <iframe 
            class="viewer-content-iframe"
            title="Inline Frame Example"
            width="100%"
            height="100%"
            scrolling="yes"
            src="{{template_path}}">
        </iframe>
    </div>
</div>



{% endblock %}