{% apply spaceless %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Admin{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
        <script async="" defer="" src="{{ asset('assets/js/backend.js') }}"></script>
        {% block stylesheets %}
            <link href="{{ asset('assets/css/backend.css') }}" rel="stylesheet">
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <div class="linotype-admin">

                <h1><a href="/">Website</a> | <a href="/admin">Administration</a> > Edit</h1>

                edit
                {# {% if success == 'true' %}
                    <div class="message success">Success</div>
                {% elseif success == 'false' %}
                    <div class="message error">Error</div>
                {% endif %}
                
                {{ form_start(form) }}
                
                    {{ form_errors(form) }}

                    {% for key, field in fields %}

                        {{ linotype('field',field.name, field, key ) }}

                    {% endfor %}

                    {{ form_widget(form._token) }}

                    {{ form_widget(form.Save) }}

                {{ form_end(form, {'render_rest': false}) }} #}

            </div>

        {% endblock %}
        {% block javascripts %}
            <script type="text/javascript">var linotype = [];</script>
        {% endblock %}
    </body>
</html>
{% endapply %}