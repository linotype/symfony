{% apply spaceless %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Admin{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
        <script async="" defer="" src="{{ asset('assets/js/backend.js') }}"></script>
        {% block stylesheets %}
            <link href="{{ asset('assets/css/backend.css') }}" rel="stylesheet">
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <div class="linotype-admin">
                <i class="fas fa-arrow-alt-circle-left"></i>
                <h1><a href="/">Website</a> | <a href="/admin">Administration</a></h1>
                <div class="row">
                    <div class="col">
                        <div class="blocks inner">
                            <ul>
                                {% for id, item in linotype.current.theme.map %}
                                    <li>
                                        <div class="name"><strong>{{ item.name }}</strong></div>
                                        <div class="desc">{{ item.desc }}</div>
                                        <a href="{{item.path}}">view</a> 
                                        <a href="/admin/{{id}}/new">new</a> 
                                        <a href="/admin/{{id}}/delete">delete</a> 
                                        <a href="/admin/{{id}}/edit">edit</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
                <a href="/linotype">linotype</a>
            </div>
        {% endblock %}
        {% block javascripts %}
            <script type="text/javascript">var linotype = [];</script>
        {% endblock %}
    </body>
</html>
{% endapply %}