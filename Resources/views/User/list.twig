{% extends "@Linotype/admin.twig" %}

{% block header %}
    <div class="panel-block">
        <h2 class="m-0 text-primary">Users</h2>
    </div>
{% endblock %}

{% block content %}
    
    <div class="card-list">
        
        {% for item in items %}
        
            <div class="panel-block">
                <div class="dropdown float-right mt-1">
                    <div class="btn-group"><a href="{{item.link.edit}}" class="btn">Edit</a><a class="btn dropdown-toggle" tabindex="0"><i class="icon icon-caret"></i></a>
                        <ul class="menu">
                            <li class="menu-item"><a href="{{item.link.view}}">View</a></li>
                            <li class="menu-item"><a href="{{item.link.delete}}">Delete</a></li>
                        </ul>
                    </div>
                </div>
                <h4 class="text-primary mb-0 mt-2">{{item.username}}</h4>
                <p class="text-secondary mb-1">{{item.email}}</p>
                <div class="desc">
                    {% for role in item.roles %}
                        <span class="label label-rounded">{{role}}</span>
                    {% endfor %}
                </div>
            </div>
            
        
        {% endfor %}
    
    </div>

{% endblock %}

{% block footer %}
    <a href="{{link_new}}" class="btn btn-primary float-right">Create new user</a>
{% endblock %}
