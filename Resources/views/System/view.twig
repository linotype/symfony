{% extends "@Linotype/admin.twig" %}

{% block content %}

    <div class="container h-100">
        <div class="columns">
            <div class="column col-12">
                <h1>{{name}}</h1>
                <p>{{desc}}</p>
            </div>
        </div>
    </div>

{% endblock %}

{% block viewer %}

    <iframe 
        class="viewer-frame"
        title="Inline Frame Example"
        width="100%"
        height="100%"
        src="/linotype/{{type}}/{{id}}/viewer/?mode=iframe">
    </iframe>

{% endblock %}
