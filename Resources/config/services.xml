<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">
    
    <services>
        
        <!-- Service: Core -->
        <service id="linotype.core" class="Linotype\Core\LinotypeCore" public="true">
            <!-- <argument type="service" id="linotype.repo.meta"/> -->
        </service>
        <service alias="linotype.core" id="Linotype\Core\LinotypeCore" public="false"/>

        <!-- Linotype: Core -->
        <service id="linotype" class="Linotype\Bundle\LinotypeBundle\Core\Linotype" public="true">
            <argument type="service" id="service_container"/>
            <argument type="service" id="request_stack"/>
            <argument type="service" id="linotype.core"/>
            <argument type="service" id="linotype.repo.meta"/>
            <argument type="service" id="linotype.repo.template"/>
            <argument type="service" id="linotype.repo.option"/>
            <argument type="service" id="linotype.repo.translate"/>
        </service>
        <service alias="linotype" id="Linotype\Bundle\LinotypeBundle\Core\Linotype" public="true"/>

        <!-- Linotype: Collector -->
        <service class="Linotype\Bundle\LinotypeBundle\DataCollector\LinotypeCollector" id="Linotype\Bundle\LinotypeBundle\DataCollector\LinotypeCollector" public="false">
            <argument type="service" id="linotype" />
            <tag name="data_collector" template="@Linotype/Collector/linotype.html.twig" id="linotype" />
        </service>

        <!-- Service: Loader -->
        <service id="linotype.loader" class="Linotype\Bundle\LinotypeBundle\Service\LinotypeLoader" public="true">
            <argument type="service" id="service_container"/>
            <argument type="service" id="twig"/>
            <argument type="service" id="linotype"/>
        </service>
        <service alias="linotype.loader" id="Linotype\Bundle\LinotypeBundle\Service\LinotypeLoader" public="false"/>

        <!-- Service: LinotypeFileRepository -->
        <service id="linotype.repo.file" class="Linotype\Bundle\LinotypeBundle\Repository\LinotypeFileRepository" public="true">
            <argument type="service" id="Doctrine\Common\Persistence\ManagerRegistry"/>
        </service>
        <service alias="linotype.repo.file" id="Linotype\Bundle\LinotypeBundle\Repository\LinotypeFileRepository" public="false"/>

        <!-- Service: LinotypeUserRepository -->
        <service id="linotype.repo.user" class="Linotype\Bundle\LinotypeBundle\Repository\LinotypeUserRepository" public="true">
            <argument type="service" id="Doctrine\Common\Persistence\ManagerRegistry"/>
        </service>
        <service alias="linotype.repo.user" id="Linotype\Bundle\LinotypeBundle\Repository\LinotypeUserRepository" public="false"/>

        <!-- Service: LinotypeTranslateRepository -->
        <service id="linotype.repo.translate" class="Linotype\Bundle\LinotypeBundle\Repository\LinotypeTranslateRepository" public="true">
            <argument type="service" id="Doctrine\Common\Persistence\ManagerRegistry"/>
        </service>
        <service alias="linotype.repo.translate" id="Linotype\Bundle\LinotypeBundle\Repository\LinotypeTranslateRepository" public="false"/>

        <!-- Service: LinotypeMetaRepository -->
        <service id="linotype.repo.meta" class="Linotype\Bundle\LinotypeBundle\Repository\LinotypeMetaRepository" public="true">
            <argument type="service" id="Doctrine\Common\Persistence\ManagerRegistry"/>
        </service>
        <service alias="linotype.repo.meta" id="Linotype\Bundle\LinotypeBundle\Repository\LinotypeMetaRepository" public="false"/>

        <!-- Service: LinotypeOptionRepository -->
        <service id="linotype.repo.option" class="Linotype\Bundle\LinotypeBundle\Repository\LinotypeOptionRepository" public="true">
            <argument type="service" id="Doctrine\Common\Persistence\ManagerRegistry"/>
        </service>
        <service alias="linotype.repo.option" id="Linotype\Bundle\LinotypeBundle\Repository\LinotypeOptionRepository" public="false"/>

        <!-- Service: LinotypeTemplateRepository -->
        <service id="linotype.repo.template" class="Linotype\Bundle\LinotypeBundle\Repository\LinotypeTemplateRepository" public="true">
            <argument type="service" id="Doctrine\Common\Persistence\ManagerRegistry"/>
        </service>
        <service alias="linotype.repo.template" id="Linotype\Bundle\LinotypeBundle\Repository\LinotypeTemplateRepository" public="false"/>

        <!-- Service: LinotypeUserRepository -->
        <service id="Linotype\Bundle\LinotypeBundle\Repository\LinotypeUserRepository" autowire="true">
            <tag name="doctrine.repository_service"/>
        </service>

        <!-- Service: Twig -->
        <service id="linotype.twig" class="Linotype\Bundle\LinotypeBundle\Twig\LinotypeTwig" public="true">
            <argument type="service" id="service_container"/>
            <argument type="service" id="request_stack"/>
            <argument type="service" id="twig"/>
            <argument type="service" id="linotype"/>
            <argument type="service" id="linotype.repo.template"/>
            <tag name="twig.extension" />
        </service>
        <service alias="linotype.twig" id="Linotype\Bundle\LinotypeBundle\Twig\LinotypeTwig" public="false"/>


        <!-- Controller: linotype -->
        <service id="linotype.controller" class="Linotype\Bundle\LinotypeBundle\Controller\LinotypeController" public="true">
            <call method="setContainer">
                <argument type="service" id="Psr\Container\ContainerInterface"/>
            </call>
            <tag name="container.service_subscriber"/>
            <tag name="controller.service_arguments"/>
            <argument type="service" id="linotype"/>
            <argument type="service" id="linotype.loader"/>
            <argument type="service" id="linotype.repo.template"/>
        </service>
        <service alias="linotype.controller" id="Linotype\Bundle\LinotypeBundle\Controller\LinotypeController" public="true"/>

        <!-- Controller: linotype security -->
        <service id="linotype.controller.security" class="Linotype\Bundle\LinotypeBundle\Controller\LinotypeSecurityController" public="true">
            <call method="setContainer">
                <argument type="service" id="Psr\Container\ContainerInterface"/>
            </call>
            <tag name="container.service_subscriber"/>
            <tag name="controller.service_arguments"/>
            <argument type="service" id="linotype"/>
            <argument type="service" id="linotype.loader"/>
            <argument type="service" id="linotype.repo.template"/>
        </service>
        <service alias="linotype.controller.security" id="Linotype\Bundle\LinotypeBundle\Controller\LinotypeSecurityController" public="true"/>

        <!-- Controller: admin -->
        <service id="linotype.controller.admin" class="Linotype\Bundle\LinotypeBundle\Controller\LinotypeAdminController" public="true">
            <call method="setContainer">
                <argument type="service" id="Psr\Container\ContainerInterface"/>
            </call>
            <tag name="container.service_subscriber"/>
            <tag name="controller.service_arguments"/>
            <argument type="service" id="linotype"/>
            <argument type="service" id="linotype.loader"/>
            <argument type="service" id="stof_doctrine_extensions.uploadable.manager" />
        </service>
        <service alias="linotype.controller.admin" id="Linotype\Bundle\LinotypeBundle\Controller\LinotypeAdminController" public="true"/>

        <!-- Controller: admin -->
        <service id="linotype.controller.user" class="Linotype\Bundle\LinotypeBundle\Controller\LinotypeUserController" public="true">
            <call method="setContainer">
                <argument type="service" id="Psr\Container\ContainerInterface"/>
            </call>
            <tag name="container.service_subscriber"/>
            <tag name="controller.service_arguments"/>
            <argument type="service" id="linotype"/>
            <argument type="service" id="linotype.loader"/>
            <argument type="service" id="stof_doctrine_extensions.uploadable.manager" />
        </service>
        <service alias="linotype.controller.user" id="Linotype\Bundle\LinotypeBundle\Controller\LinotypeUserController" public="true"/>

        <!-- Controller: system -->
        <service id="linotype.controller.system" class="Linotype\Bundle\LinotypeBundle\Controller\LinotypeSystemController" public="true">
            <call method="setContainer">
                <argument type="service" id="Psr\Container\ContainerInterface"/>
            </call>
            <tag name="container.service_subscriber"/>
            <tag name="controller.service_arguments"/>
            <argument type="service" id="linotype"/>
            <argument type="service" id="linotype.loader"/>
        </service>
        <service alias="linotype.controller.system" id="Linotype\Bundle\LinotypeBundle\Controller\LinotypeSystemController" public="true"/>

        <!-- Controller: option -->
        <service id="linotype.controller.option" class="Linotype\Bundle\LinotypeBundle\Controller\LinotypeOptionController" public="true">
            <call method="setContainer">
                <argument type="service" id="Psr\Container\ContainerInterface"/>
            </call>
            <tag name="container.service_subscriber"/>
            <tag name="controller.service_arguments"/>
            <argument type="service" id="linotype"/>
            <argument type="service" id="linotype.loader"/>
            <argument type="service" id="stof_doctrine_extensions.uploadable.manager" />
        </service>
        <service alias="linotype.controller.option" id="Linotype\Bundle\LinotypeBundle\Controller\LinotypeOptionController" public="true"/>

        <!-- Security -->
        <service id="linotype.security" class="Linotype\Bundle\LinotypeBundle\Security\LinotypeAuthenticator" public="true">
            <argument type="service" id="Doctrine\ORM\EntityManagerInterface"/>
            <argument type="service" id="Symfony\Component\Routing\Generator\UrlGeneratorInterface"/>
            <argument type="service" id="Symfony\Component\Security\Csrf\CsrfTokenManagerInterface"/>
            <argument type="service" id="Symfony\Component\Security\Core\Encoder\UserPasswordEncoderInterface"/>
        </service>
        <service alias="linotype.security" id="Linotype\Bundle\LinotypeBundle\Security\LinotypeAuthenticator" public="false"/>

        <!-- Routing -->
        <service id="Linotype\Bundle\LinotypeBundle\Routing\ExtraLoader" public="true">
            <argument type="service" id="linotype" />
            <tag name="routing.loader"/>
        </service>

    </services>
</container>